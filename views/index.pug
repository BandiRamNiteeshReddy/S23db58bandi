extends layout

block content
  h1 Ram Niteesh Reddy Bandi

  button(type="button", class="btn btn-secondary", onclick="goFaster()") push me
  #faster
     p Increase the speed

   
  script. 
    var mph=20;
    var change=1;
    function goFaster()
    {
      mph=mph+change;
      change++;
      document.getElementById("faster").innerHTML= `MPH ${mph} with change ${change}`;
    }
  a(href='http://localhost:3000/house') Link to Class  
   br
   if (!user)
     a(href="/login") Login
     br
     a(href="/register") Register
   if (user)
      p You are currently logged in as #{user.username}
      a(href="/house") Take me to house
      br
      a(href="/logout") Logout


